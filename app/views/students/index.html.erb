<div class="body-container">

    <div class="heading">
        <h1>Student Home</h1>
    </div>

    <div class="table-form">
        <table>
            <tr>
                <th>ID</th>
                <th>First_Name</th>
                <th>Last_Name</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>

            <% @students.each do |student| %>
            <tr>
                <td> <a href="<%= student_path(student) %>"> <%= student.id %> </a> </td>
                <td><%= student.first_name %></td>
                <td><%= student.last_name %></td>
                <td> <a href="<%= edit_student_path(student) %>" class="btn btn-info"> Update </td>
                <td> <%= link_to "Delete", student_path(student), class:"btn btn-danger", data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?" 
                } %> </td>
            </tr>
            <% end %>
        </table>
    </div>

    <div class="bottom-button">
        <%= link_to "Register New Student", new_student_path, class:"btn btn-info" %>
    </div>
